{
  "name": "Waveshare ESP32-S3 Touch LCD 3.5 AXS15231B QSPI custom panel",
  "url": "https://www.waveshare.com/wiki/ESP32-S3-Touch-LCD-3.5",
  "vendor": "Waveshare",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],
  "build": {
    "core": "esp32",
    "variant": "esp32s3",
    "mcu": "esp32s3",
    "f_cpu": "240000000L",
    "f_flash": "80000000L",
    "flash_mode": "qio",
    "arduino": {
      "ldscript": "esp32s3_out.ld",
      "memory_type": "qio_opi"
    },
    "extra_flags": [
      "-DARDUINO_ESP32S3_DEV",
      "-DBOARD_HAS_PSRAM",
      "-DARDUINO_USB_MODE=1",
      "-DARDUINO_USB_CDC_ON_BOOT=1",

      "-DSMARTDISPLAY_USE_CUSTOM_PANEL",

      "-DDISPLAY_WIDTH=320",
      "-DDISPLAY_HEIGHT=480",
      "-DGPIO_BCKL=6",

      "-DAXS15231B_SPI_HOST=SPI2_HOST",
      "-DAXS15231B_SPI_DMA_CHANNEL=SPI_DMA_CH_AUTO",

      "-DAXS15231B_SPI_BUS_PCLK=5",
      "-DAXS15231B_SPI_BUS_DATA0=1",
      "-DAXS15231B_SPI_BUS_DATA1=2",
      "-DAXS15231B_SPI_BUS_DATA2=3",
      "-DAXS15231B_SPI_BUS_DATA3=4",
      "-DAXS15231B_SPI_BUS_MAX_TRANSFER_SZ=64*1024",
      "-DAXS15231B_SPI_BUS_FLAGS=0",
      "-DAXS15231B_SPI_BUS_INTR_FLAGS=0",

      "-DAXS15231B_SPI_CONFIG_CS=12",
      "-DAXS15231B_SPI_CONFIG_DC=-1",

      "-DAXS15231B_DEV_CONFIG_RESET=GPIO_NUM_NC",
      "-DAXS15231B_DEV_CONFIG_COLOR_SPACE=ESP_LCD_COLOR_SPACE_BGR",
      "-DAXS15231B_DEV_CONFIG_BITS_PER_PIXEL=16",
      "-DAXS15231B_DEV_CONFIG_FLAGS_RESET_ACTIVE_HIGH=0",
      "-DAXS15231B_DEV_CONFIG_VENDOR_CONFIG=NULL",

      "-DI2C_SDA=8",
      "-DI2C_SCL=7",
      "-DTCA_ADDR=0x20",
      "-DTCA_LCD_RSTBIT=1",

      "-DDISPLAY_SWAP_XY=false",
      "-DDISPLAY_MIRROR_X=false",
      "-DDISPLAY_MIRROR_Y=false",

      "-DIMU_INT_GPIO=0"
    ]
  },
  "upload": {
    "maximum_size": 16777216,
    "maximum_ram_size": 327680,
    "flash_size": "16MB",
    "speed": 921600,
    "require_upload_port": true
  },
  "debug": {
    "openocd_board": "esp32s3.cfg"
  }
}