{
  "name": "Waveshare ESP32-S3 Touch LCD 3.5",
  "url": "https://www.waveshare.com/wiki/ESP32-S3-Touch-LCD-3.5",
  "vendor": "Waveshare",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],
  "build": {
    "core": "esp32",
    "variant": "esp32s3",
    "mcu": "esp32s3",
    "f_cpu": "240000000L",
    "f_flash": "80000000L",
    "flash_mode": "qio",
    "arduino": {
      "ldscript": "esp32s3_out.ld",
      "memory_type": "qio_opi"
    },
    "extra_flags": [
      "-DARDUINO_ESP32S3_DEV",
      "-DBOARD_HAS_PSRAM",
      "-DARDUINO_USB_MODE=1",
      "-DARDUINO_USB_CDC_ON_BOOT=1",

      "-DSMARTDISPLAY_USE_CUSTOM_PANEL",

      "-DDISPLAY_WIDTH=320",
      "-DDISPLAY_HEIGHT=480",

      "-DLV_COLOR_DEPTH=16",
      "-DLV_COLOR_16_SWAP=0",

      "-DGPIO_BCKL=6",

      "-DSPI_MISO=2",
      "-DSPI_MOSI=1",
      "-DSPI_SCLK=5",
      "-DLCD_CS=-1",
      "-DLCD_DC=3",
      "-DLCD_RST=-1",

      "-DST7796_SPI_FREQ_PRIMARY=60000000UL",
      "-DST7796_SPI_FREQ_SECONDARY=30000000UL",

      "-DI2C_SDA=8",
      "-DI2C_SCL=7",
      "-DTCA_ADDR=0x20",
      "-DTCA_LCD_RSTBIT=1",

      "-DTOUCH_INT=16",
      "-DFT6336_I2C_ADDR=0x38",

      "-DTOUCH_SWAP_XY=false",
      "-DTOUCH_MIRROR_X=false",
      "-DTOUCH_MIRROR_Y=false",

      "-DDISPLAY_SWAP_XY=false",
      "-DDISPLAY_MIRROR_X=false",
      "-DDISPLAY_MIRROR_Y=false"
    ]
  },
  "upload": {
    "maximum_size": 16777216,
    "maximum_ram_size": 327680,
    "flash_size": "16MB",
    "speed": 921600,
    "require_upload_port": true
  },
  "debug": {
    "openocd_board": "esp32s3.cfg"
  }
}