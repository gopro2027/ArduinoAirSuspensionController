{
  "name": "Waveshare ESP32-S3 Touch LCD 3.5 (AXS15231B QSPI)",
  "url": "https://www.waveshare.com/wiki/ESP32-S3-Touch-LCD-3.5",
  "vendor": "Waveshare",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],

  "build": {
    "core": "esp32",
    "variant": "esp32s3",
    "mcu": "esp32s3",
    "f_cpu": "240000000L",
    "f_flash": "80000000L",
    "flash_mode": "qio",

    "arduino": {
      "ldscript": "esp32s3_out.ld",
      "memory_type": "qio_opi"
    },

    "extra_flags": [
      "-DARDUINO_ESP32S3_DEV",
      "-DBOARD_HAS_PSRAM",
      "-DARDUINO_USB_MODE=1",
      "-DARDUINO_USB_CDC_ON_BOOT=1",

      "-DDISPLAY_WIDTH=320",
      "-DDISPLAY_HEIGHT=480",

      "-DDISPLAY_BCKL=6",

      "-DDISPLAY_AXS15231B_QSPI",
      "-DAXS15231B_SPI_HOST=SPI2_HOST",
      "-DAXS15231B_SPI_DMA_CHANNEL=SPI_DMA_CH_AUTO",

      "-DAXS15231B_SPI_BUS_PCLK=5",
      "-DAXS15231B_SPI_BUS_DATA0=1",
      "-DAXS15231B_SPI_BUS_DATA1=2",
      "-DAXS15231B_SPI_BUS_DATA2=3",
      "-DAXS15231B_SPI_BUS_DATA3=4",
      "-DAXS15231B_SPI_BUS_MAX_TRANSFER_SZ=(LVGL_BUFFER_PIXELS*sizeof(lv_color16_t))",
      "-DAXS15231B_SPI_BUS_FLAGS=0",
      "-DAXS15231B_SPI_BUS_INTR_FLAGS=0",

      "-DAXS15231B_SPI_CONFIG_CS=12",
      "-DAXS15231B_SPI_CONFIG_DC=-1",
      "-DAXS15231B_SPI_CONFIG_SPI_MODE=SPI_MODE3",
      "-DAXS15231B_SPI_CONFIG_PCLK_HZ=40000000",
      "-DAXS15231B_SPI_CONFIG_TRANS_QUEUE_DEPTH=10",
      "-DAXS15231B_SPI_CONFIG_LCD_CMD_BITS=32",
      "-DAXS15231B_SPI_CONFIG_LCD_PARAM_BITS=8",
      "-DAXS15231B_SPI_CONFIG_FLAGS_DC_LOW_ON_DATA=false",
      "-DAXS15231B_SPI_CONFIG_FLAGS_OCTAL_MODE=false",
      "-DAXS15231B_SPI_CONFIG_FLAGS_QUAD_MODE=1",
      "-DAXS15231B_SPI_CONFIG_FLAGS_LSB_FIRST=false",

      "-DAXS15231B_DEV_CONFIG_RESET=GPIO_NUM_NC",
      "-DAXS15231B_DEV_CONFIG_COLOR_SPACE=ESP_LCD_COLOR_SPACE_RGB",
      "-DAXS15231B_DEV_CONFIG_BITS_PER_PIXEL=16",
      "-DAXS15231B_DEV_CONFIG_FLAGS_RESET_ACTIVE_HIGH=false",
      "'-D AXS15231B_DEV_CONFIG_VENDOR_CONFIG=NULL'",


      "-DLVGL_BUFFER_PIXELS=(320*480/8)",
      "-DLVGL_BUFFER_MALLOC_FLAGS=(MALLOC_CAP_DMA|MALLOC_CAP_8BIT)",
      "-DSMARTDISPLAY_DMA_BUFFER_SIZE=98304",
      "-DSMARTDISPLAY_DMA_QUEUE_SIZE=10",
      "-DSMARTDISPLAY_DMA_CHUNK_THRESHOLD=1536",
      "-DSMARTDISPLAY_DMA_TIMEOUT_MS=1000",

      "-DDISPLAY_HAS_TOUCH",
      "-DTOUCH_CONTROLLER_AXS15231B",
      "-DTOUCH_I2C_SCL=7",
      "-DTOUCH_I2C_SDA=8",

      "-DDISPLAY_SWAP_XY=false",
      "-DDISPLAY_MIRROR_X=false",
      "-DDISPLAY_MIRROR_Y=false"
    ]
  },

  "upload": {
    "maximum_size": 16777216,
    "maximum_ram_size": 327680,
    "flash_size": "16MB",
    "speed": 921600,
    "require_upload_port": true
  },

  "debug": {
    "openocd_board": "esp32s3.cfg"
  }
}
